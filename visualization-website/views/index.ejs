<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <%- include('utils/head.ejs') %> 
    <link rel='stylesheet' href='/stylesheets/index.css' />
  </head>
  <body>
    <div class="container-fluid">
      <div class="search-wrapper mx-auto">
        <h1 id="comp-logo" class="text-center mb-5"><%= title %></h1>
        <form>
          <div class="input-group mb-4">
            <input type="text" id="input-search" class="form-control" placeholder="Search a song" aria-label="Search a song" required>
            <input type="number" id="input-year" class="form-control" min="1900" max="<%= new Date().getFullYear();%>" step="1" placeholder="Year" aria-label="Year">
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" id="btn-search" class="btn btn-spotify">Search</button>
          </div>
        </form>
      </div>
    </div>
    <%- include('utils/foot.ejs') %>
    <script src="/javascripts/index.js"></script>
  </body>
</html>
